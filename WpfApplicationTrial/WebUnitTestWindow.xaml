<Window x:Class="WpfApplicationTrial.WebUnitTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplicationTrial"
        mc:Ignorable="d"
        Title="Web Page Unit Test Tool" Height="200" Width="400" ResizeMode="NoResize">
    <Grid>
        <GroupBox Header="Input File Select">
            <Canvas>
                <TextBox x:Name="txtFile" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Canvas.Left="5" Canvas.Top="10" Width="300" />
                <Button x:Name="btnFile" Content="Select" Width="65" Canvas.Right="0" Canvas.Top="10" Click="btnFile_Click"/>
                <Button x:Name="btnStart" Content="Start" Height="40" Width="150" Canvas.Left="110" Canvas.Bottom="5" Click="btnStart_Click"/>
            </Canvas>
        </GroupBox>
    </Grid>
</Window>
